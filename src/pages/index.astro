---
import Layout from "../layouts/Layout.astro";
import WhatsAppFloat from "../components/WhatsAppFloat.astro";
import Header from "../components/Header.astro";
import Hero from "../components/Hero.astro";
import Services from "../components/Services.astro";
import Classes from "../components/Classes.astro";
import Trainers from "../components/Trainers.astro";
import Plans from "../components/Plans.astro";
import Testimonials from "../components/Testimonials.astro";
import Contact from "../components/Contact.astro";
import MapSection from "../components/MapSection.astro";
import Footer from "../components/Footer.astro";
import { siteConfig } from "../data/siteConfig";
---
<Layout title={siteConfig.meta.title}>
  <WhatsAppFloat href={siteConfig.whatsapp.href} label={siteConfig.whatsapp.label} />
  <Header branding={siteConfig.branding} links={siteConfig.navigation} />
  <Hero {...siteConfig.hero} />
  <Services {...siteConfig.services} />
  <Classes {...siteConfig.classes} />
  <Trainers {...siteConfig.trainers} />
  <Plans {...siteConfig.plans} />
  <Testimonials {...siteConfig.testimonials} />
  <Contact {...siteConfig.contact} />
  <MapSection {...siteConfig.map} />
  <Footer
    branding={siteConfig.branding}
    navLinks={siteConfig.navigation}
    newsletterTitle={siteConfig.footer.newsletterTitle}
    quickLinksTitle={siteConfig.footer.quickLinksTitle}
    scheduleTitle={siteConfig.footer.scheduleTitle}
    emergencyTitle={siteConfig.footer.emergencyTitle}
    emergencyPhone={siteConfig.footer.emergencyPhone}
    emergencyHref={siteConfig.footer.emergencyHref}
    schedule={siteConfig.footer.schedule}
    legalLinks={siteConfig.footer.legalLinks}
  />

  <script src="https://unpkg.com/aos@2.3.1/dist/aos.js" is:inline></script>
</Layout>
